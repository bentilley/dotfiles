#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
if [[ "${TRACE-0}" == "1" ]]; then
  set -o xtrace
fi

if [[ "${1-}" =~ ^-*h(elp)?$ ]]; then
  echo 'usage: wm [file]

Used to run wasteman curl config files.

'
  exit
fi

# cd "$(dirname "$0")"

main() {
  FILE="${1}"
  if [[ -z "${FILE}" ]]; then
    echo "No file specified"
    exit 1
  fi
  shift

  # curl --silent --verbose --config <(envsubst <"${FILE}") "$@" | jq
  curl --silent --config <(envsubst <"${FILE}") "$@" | jq
}

main "$@"
