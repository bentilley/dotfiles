#!/usr/bin/env bash

main() {
  task_id=$(choose_task_id)
  if [ -n "$task_id" ]; then
    task_title=$(get_task_title "$task_id")
    echo "$task_title"
    if [ -n "$task_title" ]; then
      task='!'"${task_id}  ${task_title}"
      echo "Adding $task"
      task add project:ticket due:1week priority:H "$task"
    fi
  fi
  echo "Nothing to do..."
}

choose_task_id() {
  get_tasks |
    fzf |
    awk '{ gsub("!", "", $1); print $1 }'
}

get_tasks() {
  glab mr list --assignee=@me | rg '^!'
}

get_task_title() {
  id="$1"
  glab mr view "$id" |
    rg '^title:' |
    sed -e 's/^title:\s*//g'
}

main "$@"
