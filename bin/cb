#!/usr/bin/env bash

# Simple clipboard command that is OS agnostic.

if [ "$(uname)" = "Linux" ]; then
  CLIP_BOARD="xclip -selection clipboard -in"
  READ_COMMAND="read -rN1"
elif [ "$(uname)" = "Darwin" ]; then
  CLIP_BOARD="pbcopy"
  READ_COMMAND="read -rn1"
else
  exit 1
fi

(
  while IFS='' $READ_COMMAND line || [ -n "$line" ]; do
    printf "%s" "$line"
  done
) | $CLIP_BOARD
