# vim: set ft=zsh:

# Haskell
export PATH="$PATH:$HOME/.local/bin"  # Haskell stack packages
[ -f "${GHCUP_INSTALL_BASE_PREFIX:=$HOME}/.ghcup/env" ] && \
  source "${GHCUP_INSTALL_BASE_PREFIX:=$HOME}/.ghcup/env"

# Rust
export PATH="$HOME/.cargo/bin:$PATH"

# GNU tools
export PATH="/usr/local/opt/gnu-sed/libexec/gnubin:$PATH"

# some homebrew formulae put executables in local/sbin
export PATH="/usr/local/sbin:$PATH"

# llvm tools
export PATH="$PATH:/usr/local/opt/llvm/bin"

# Android
export ANDROID_HOME=$HOME/Library/Android/sdk
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/tools
export PATH=$PATH:$ANDROID_HOME/tools/bin
export PATH=$PATH:$ANDROID_HOME/platform-tools
# view instructions here https://reactnative.dev/docs/environment-setup

# paths for zlib
if [ -d /usr/local/opt/zlib ]; then
  export LDFLAGS="-L/usr/local/opt/zlib/lib"
  export CPPFLAGS="-I/usr/local/opt/zlib/include"
  export PKG_CONFIG_PATH="/usr/local/opt/zlib/lib/pkgconfig"
fi
