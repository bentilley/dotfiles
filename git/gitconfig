[commit]
  gpgsign = true

[pull]
  rebase = false

[rebase]
  autosquash = true

[init]
  defaultBranch = main

[gpg]
  program = /usr/local/bin/gpg

[credential]
  helper = cache

[fetch]
  writeCommitGraph = true

[rerere]
  enabled = true

