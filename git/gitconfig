[alias]
	absorb = !git_fixup_rebase
	alias = "! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /=/ | column -s '=' -t -l 2"
	bb = !git_better_branch
	bblame = blame -w -C -C -C
	begin = !git_branch_origin_master
	dft = difftool
	dlog = -c diff.external=difft log -p --ext-diff
	ec = commit --allow-empty -m
	fa = fetch --all --prune --prune-tags --jobs=10
	ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
	latest = describe --tags --abbrev=0
	root = rev-parse --show-toplevel
	staash = stash --all
	tmp = !git_tmp_worktree
	tmsu = "!gt() { tmsu files $(git branch --show-current) ;}; gt"
	tmsutag = "!gtt() { tmsu tag $1 $(git branch --show-current) ;}; gtt"
	trim = !git_local_prune_merged
	where = branch --show-current
	xbranch = "!gbx() { git branch | cut -c 3- | fzf ;}; gbx"
	xclone = !git_clone_with_worktrees

[branch]
	sort = -committerdate

[commit]
	gpgsign = true
	verbose = true

[core]
	fsmonitor = true
	untrackedCache = true

[credential]
	helper = cache

[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
	tool = difftastic

[difftool]
	prompt = false

[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"

[fetch]
	writeCommitGraph = true

[gpg]
	program = /usr/bin/gpg

[http]
	sslCAInfo = /etc/ssl/certs/ca-certificates.crt

[init]
	defaultBranch = master

[merge]
	tool = nvim
	conflictstyle = zdiff3

[mergetool]
	keepBackup = false
	prompt = false

[mergetool "nvim"]
	cmd = nvim -f -c "Gvdiffsplit!" "$MERGED"

[pager]
	difftool = true

[pull]
	rebase = false

[push]
	default = simple
	autoSetupRemote = true

[rebase]
	autoStash = true
	autosquash = true
	updateRefs = true

[rerere]
	autoupdate = true
	enabled = true

[tag]
	sort = version:refname

[user]
	email = tilleyben@hotmail.com
	name = Ben Tilley
