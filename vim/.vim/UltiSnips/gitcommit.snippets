# these functions are imported from the /pythonx dir in /.vim
global !p
from snippets.gitcommit import expand_tabstops
endglobal


post_jump "expand_tabstops(snip)"
snippet "(build|ci|docs|feat|fix|perf|refactor|style|test|wip)" "conventional commit message" br
`!p snip.rv = match[1]`
endsnippet
